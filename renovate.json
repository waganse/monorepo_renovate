{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "labels": ["Dependencies"],
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "groupName": "web-app/eslint",
      "paths": "packages/web-app/*",
      "matchFileNames": ["packages/web-app/package.json"]
    },
    {
      "groupName": "ui/eslint",
      "paths": "packages/ui/*",
      "matchFileNames": ["packages/ui/package.json"]
    }
  ],
  "ignoreDeps": [],
  "ignorePaths": []
}
