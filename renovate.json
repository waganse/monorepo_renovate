{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "labels": ["Dependencies"],
  "dependencyDashboard": true,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "groupName": "web-app",
      "paths": "packages/web-app/*",
      "matchFileNames": ["packages/web-app/package.json"],
      "commitMessagePrefix": "chore(deps):",
      "addLabels": ["Package: web-app"]
    },
    {
      "groupName": "ui",
      "paths": "packages/ui/*",
      "matchFileNames": ["packages/ui/package.json"],
      "commitMessagePrefix": "chore(deps):",
      "addLabels": ["Package: ui"]
    }
  ],
  "ignoreDeps": [],
  "ignorePaths": []
}
